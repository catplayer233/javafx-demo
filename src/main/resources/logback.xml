<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%blue(%d{YYYY-MM-dd HH:mm:ss.SSS}) %cyan([%-10thread{0}]) %highlight([%-5level]) %green([%C{0}#%M]) => %highlight([%msg]%n)</pattern>
        </encoder>
    </appender>
    <root level="debug">
        <appender-ref ref="console"/>
    </root>
</configuration>
